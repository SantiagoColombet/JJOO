<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JJOO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JJOO.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a href='@Url.Action("Index","Home")'>
                <img src="https://via.placeholder.com/200" alt="Imagen de prueba">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href='@Url.Action("Historia","Home")'>Historia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href='@Url.Action("Deportes","Home")'>Deportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href='@Url.Action("Paises","Home")'>Paises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href='@Url.Action("AgregarDeportista","Home")'>Agregar deportista</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link "  href='@Url.Action("Creditos","Home")'>Creditos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JJOO - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
